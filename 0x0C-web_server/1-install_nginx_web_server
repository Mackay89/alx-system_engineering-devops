#!/usr/bin/env bash
#Script that installs nginx on web server; Nginx should be listening port on 80
#Update package index and install nginx with -y flag for automatic yes to prompts


sudo apt-get update
sudo apt-get install -y nginx 


sudo ufw allow "Nginx HTTP"


INDEX_FILE="/var/www/html/index.nginx-debian.html"
sudo chown $USER:$USER $INDEX_FILE
echo "Hello World!" | sudo tee $INDEX_FILE > /dev/null

sudo service nginx restart
