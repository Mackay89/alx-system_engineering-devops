global
	log /dev/log local0
        log /dev/log	local1 notice
        chroot /var/lib/haproxy
	stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
	stats timeout 30s
	user haproxy
	group haproxy
   	daemon

defaults
	log global
    	mode http
    	option httplog
    	option dontlognull
    	timeout connect 5000
    	timeout client 50000
    	timeout server 50000

frontend www.mack4y.tech-http
	bind *:80
      	redirect scheme https code 301 if !{ ssl_fc }

frontend www.mack4y.tech-https
	bind *:443 ssl crt /etc/ssl/certs/mack4y.tech.pem
       	default_backend www.mack4y.tech-backend

backed www.mack4y.tech-backend
	balance roundrobin
	server 240747-web-01 54.158.80.63 check
       	server 240747-web-02 100.26.255.237 check
