#!/usr/bin/env bash
# This script ensures that Nginx is running and listening on port 80
# Start Nginx if it's not already running
sudo systemctl start nginx
# Check if Nginx is listening on port 80
if ! sudo netstat -tln | grep ":80 "; then
	# Execute the command to make Nginxlisten on port 80
	/some/other/directory/0-nginx_likes_port_80
fi
